<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayQuizActivity" 
    android:background="@drawable/back">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

       <ImageButton
           android:id="@+id/btnShowCategories"
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:layout_weight="1"
           android:background="@android:color/transparent"
           android:scaleType="fitStart"
           android:src="@drawable/img_navigation_grid_button"
           android:onClick="goToCategories" />
                
    <ProgressBar
        android:id="@+id/progBarQuiz"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp" 
        android:max="10"
        android:progress="10"/>
       
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitEnd"
            android:src="@drawable/img_navigation_home_english"
            android:onClick="goHome" />
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/play_timer" />

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="There are more than 7000 varieties of apples grown worldwide. " />
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/fruits_detail_detail_playdescription"
            android:background="@android:color/transparent"/>
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp" >

        <ImageButton
            android:id="@+id/btnAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/fruits_detail_apple_applejuice"
            android:onClick="checkAnswer" />

        <ImageButton
            android:id="@+id/btnAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/fruits_detail_apple_applebasket"
            android:onClick="checkAnswer" />

         <ImageButton
             android:id="@+id/btnAnswer3"
             android:layout_width="wrap_content"
             android:layout_height="200dp"
             android:layout_weight="1"
             android:background="@android:color/transparent"
             android:scaleType="fitCenter"
             android:src="@drawable/fruits_detail_apple_appletree"
             android:onClick="checkAnswer" />

         <ImageButton
             android:id="@+id/btnAnswer4"
             android:layout_width="wrap_content"
             android:layout_height="200dp"
             android:layout_weight="1"
             android:background="@android:color/transparent"
             android:scaleType="fitCenter"
             android:src="@drawable/fruits_detail_apple_peeledapple"
             android:onClick="checkAnswer" />

    </TableRow>


</TableLayout>
