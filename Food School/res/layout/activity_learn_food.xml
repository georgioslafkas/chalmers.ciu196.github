<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnFoodActivity"
        android:background="@drawable/back"
     >

    <!-- Replace with image buttons -->
   <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

       <ImageButton
           android:id="@+id/imageButtona"
           android:layout_width="wrap_content"
           android:layout_height="80dp"
           android:layout_weight="10"
           android:background="@android:color/transparent"
           android:scaleType="fitStart"
           android:src="@drawable/img_navigation_back_english"
           android:visibility="gone" />

       <ImageButton
           android:id="@+id/btnShowCategories"
          android:scaleType="fitStart"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_navigation_grid_button"
            android:layout_weight="1"
            android:onClick="goToCategories" />
        
        <ImageButton
            android:id="@+id/imageButtonc"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/img_navigation_next_english"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitEnd"
            android:src="@drawable/img_navigation_home_english"
            android:onClick="goHome" />
        
    </TableRow>
        
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn1_1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_fruits_apple"
            android:onClick="pickFoodToShow" />
        
           	<ImageButton
           	    android:id="@+id/btn1_2"
           	    android:layout_width="wrap_content"
           	    android:layout_height="120dp"
           	    android:layout_marginLeft="50dp"
           	    android:layout_marginTop="70dp"
           	    android:layout_weight="1"
           	    android:background="@android:color/transparent"
           	    android:scaleType="fitCenter"
           	    android:src="@drawable/img_fruits_banana" 
           	    android:onClick="pickFoodToShow"/>
                
           	<ImageButton
           	    android:id="@+id/btn1_3"
           	    android:layout_width="wrap_content"
           	    android:layout_height="120dp"
           	    android:layout_marginLeft="50dp"
           	    android:layout_marginTop="70dp"
           	    android:layout_weight="1"
           	    android:background="@android:color/transparent"
           	    android:onClick="pickFoodToShow"
           	    android:scaleType="fitCenter"
           	    android:src="@drawable/img_fruits_cherry" />
                        
            <ImageButton
                android:id="@+id/btn1_4"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="pickFoodToShow"
                android:scaleType="fitCenter"
                android:src="@drawable/img_fruits_grapes" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn2_1"
