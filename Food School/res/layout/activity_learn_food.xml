                android:src="@drawable/img_fruits_peach" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn3_1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="pickFoodToShow"
            android:scaleType="fitCenter"
            android:src="@drawable/img_fruits_pear" />
        
           	<ImageButton
           	    android:id="@+id/btn3_2"
           	    android:layout_width="wrap_content"
           	    android:layout_height="120dp"
           	    android:layout_marginLeft="50dp"
           	    android:layout_marginTop="70dp"
           	    android:layout_weight="1"
           	    android:background="@android:color/transparent"
           	    android:onClick="pickFoodToShow"
           	    android:scaleType="fitCenter"
           	    android:src="@drawable/img_fruits_pineapple" />
                
           	<ImageButton
           	    android:id="@+id/btn3_3"
