            android:name="chalmers.ciu196.foodschool.PlayQuizActivity"
            android:label="@string/title_activity_play_quiz" 
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="chalmers.ciu196.foodschool.PlayTapActivity"
            android:label="@string/title_activity_play_tap" 
            android:screenOrientation="landscape">>
        </activity>
        <activity
            android:name="chalmers.ciu196.foodschool.PlayEndActivity"
            android:label="@string/title_activity_play_end" 
            android:screenOrientation="landscape">
        </activity>
        <service android:enabled="true" android:name=".MediaServiceA"/>
        <service android:enabled="true" android:name=".MediaServiceB"/>
    </application>

</manifest>